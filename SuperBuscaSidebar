<body>

  <div class="header">
    <input type="text" id="searchInput" placeholder="Ex: bushing 1-1/4 cpvc" autocomplete="off" autofocus>
  </div>

  <div class="results-container" id="resultsList">
    <div style="padding:20px; text-align:center; color:#888;">Carregando catálogo...</div>
  </div>

  <div class="footer">
    <span class="info-text" id="statusText">0 itens</span>
    <button id="btnInsert" onclick="inserirDados()">INSERIR</button>
  </div>

  <script>
    let rawData = [];
    let selectedSet = new Set();

    // 1. Carrega dados ao abrir
    window.onload = () => {
      google.script.run
        .withSuccessHandler(onDataLoaded)
        .withFailureHandler(err => {
          document.getElementById('resultsList').innerHTML = `<div style="padding:20px; color:red">Erro: ${err.message}</div>`;
        })
        .getDadosParaBusca();
    };

    function onDataLoaded(data) {
      rawData = data || [];
      const list = document.getElementById('resultsList');
      if (rawData.length === 0) {
        list.innerHTML = '<div style="padding:20px; text-align:center; color:#888;">Lista vazia ou não encontrada.</div>';
      } else {
        list.innerHTML = '<div style="padding:20px; text-align:center; color:#888;">Digite para filtrar...</div>';
      }
      
      document.getElementById('searchInput').addEventListener('input', runFilter);
      document.getElementById('searchInput').focus();
    }

    // 2. Filtro (AND Logic, preservando símbolos)
    function runFilter() {
      const query = document.getElementById('searchInput').value.toLowerCase();
      const container = document.getElementById('resultsList');
      
      if (!query.trim()) {
        container.innerHTML = '<div style="padding:20px; text-align:center; color:#888;">Digite para filtrar...</div>';
        return;
      }

      const tokens = query.split(/\s+/).filter(t => t.length > 0);

      const filtered = rawData.filter(item => {
        const itemLower = item.toLowerCase();
        return tokens.every(token => itemLower.includes(token));
      });

      renderList(filtered);
    }

    // 3. Renderização
    function renderList(items) {
      const container = document.getElementById('resultsList');
      container.innerHTML = '';

      if (items.length === 0) {
        container.innerHTML = '<div style="padding:20px; text-align:center; color:#888;">Nenhum resultado.</div>';
        return;
      }

      // Limite de 50 itens para performance
      const limit = 50;
      const viewItems = items.slice(0, limit);

      viewItems.forEach(text => {
        const div = document.createElement('div');
        const isSelected = selectedSet.has(text);
        
        div.className = `result-item ${isSelected ? 'selected' : ''}`;
        div.onclick = () => toggleItem(text, div);
        
        div.innerHTML = `
          <div class="custom-check"></div>
          <span>${text}</span>
        `;
        container.appendChild(div);
      });

      if (items.length > limit) {
        const more = document.createElement('div');
        more.style.padding = "10px";
        more.style.textAlign = "center";
        more.style.color = "#888";
        more.innerText = `+ ${items.length - limit} outros resultados...`;
        container.appendChild(more);
      }
    }

    // 4. Seleção
    function toggleItem(text, el) {
      if (selectedSet.has(text)) {
        selectedSet.delete(text);
        el.classList.remove('selected');
      } else {
        selectedSet.add(text);
        el.classList.add('selected');
      }
      updateFooter();
    }

    function updateFooter() {
      const count = selectedSet.size;
      document.getElementById('statusText').innerText = `${count} selecionado(s)`;
      const btn = document.getElementById('btnInsert');
      
      if (count > 0) {
        btn.classList.add('active');
        btn.innerText = `INSERIR (${count})`;
      } else {
        btn.classList.remove('active');
        btn.innerText = 'INSERIR';
      }
    }

    // 5. Inserção Fluida (Mantém a busca)
    function inserirDados() {
      const itens = Array.from(selectedSet);
      if (itens.length === 0) return;

      const btn = document.getElementById('btnInsert');
      const oldText = btn.innerText;
      btn.innerText = '...';

      google.script.run
        .withSuccessHandler(() => {
          // 1. Limpa seleção lógica
          selectedSet.clear();
          
          // 2. Remove destaque visual, mas MANTÉM a lista
          document.querySelectorAll('.result-item.selected').forEach(el => {
            el.classList.remove('selected');
          });

          // 3. Atualiza rodapé
          updateFooter();

          // 4. Feedback no botão
          const btn = document.getElementById('btnInsert');
          btn.innerText = "SUCESSO!";
          setTimeout(() => updateFooter(), 1500);

          // 5. Mantém o foco para continuar
          document.getElementById('searchInput').focus();
        })
        .withFailureHandler(err => {
          alert("Erro: " + err.message);
          btn.innerText = oldText;
        })
        .inserirItensSelecionados(itens);
    }
  </script>
</body>
</html>
